#ifndef SRC_FILTER_L_H_
#define SRC_FILTER_L_H_
//azimuth values
#define 0_degrees 0
#define 90_degrees 1
#define 180_degrees 2
#define 270_degrees 3

#include "xil_io.h"






typedef struct 
{
    u32 h_R[40];
    u32 h_L[40];
    u32 h_R_normalization_factor,h_L_normalization_factor; 
    int order;
    u32 baseadrr_L;
    u32 baseadrr_R;
    u32 reg_offset;
    int last_index_sent;
    int azimuth ;

} filter;



#endif /* SRC_FILTER_L_H_ */
